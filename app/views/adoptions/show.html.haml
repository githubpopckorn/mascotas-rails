
.row
  .col-md-3
  .col-sm-12.col-md-6
    .card{style:"width: 30rem;"}
      = image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@adoption.latitude}%2C#{@adoption.longitude}&key=AIzaSyB1s1zvu6kR7T1XgVRF_0EBrIgzrbz5Wq0"

      .card-body
        .card-title
          %h5= @adoption.pet.name
        .card-textof
          %p
            %b Latitude:
            = @adoption.latitude
          %p
            %b Longitude:
            = @adoption.longitude
          %p
            %b Address:
            = @adoption.address
        = link_to "Inicio", root_path, class: "btn btn-primary btn-lg active"
        = link_to "Imprimir Contrato", show_contrato_path(id: @adoption.pet_id, format: :pdf), class: "btn btn-primary btn-lg active"

